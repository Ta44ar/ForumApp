@using ForumApp.ViewModels
@model CreateForumViewModel

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Forum name</label>
        <input asp-for="Title" class="form-control" placeholder="Enter forum name">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Choose category</label>
        <select asp-for="ForumCategory" asp-items="@Html.GetEnumSelectList<ForumApp.Data.Enum.ForumCategory>()" class="form-control">
            <option>--Select--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description">Forum description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter forum description">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
